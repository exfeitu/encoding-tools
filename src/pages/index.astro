---
// src/pages/index.astro
import { getCollection } from 'astro:content';

const tools = await getCollection('tools');
const toolList = tools; // 显示所有工具
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Encoding Tools – Online Converters & Explainers</title>
  <meta name="description" content="Free online tools for JSON, YAML, Base64, CSV, XML, and more. No signup, client-side only." />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <h1>Encoding Tools</h1>
  <p>Free, fast, privacy-first converters for developers.</p>

  <ul>
    {toolList.map(tool => (
      <li>
        <a href={`/${tool.slug}`}>{tool.data.h1}</a>
      </li>
    ))}
  </ul>

  <footer>
    <p>© 2026 Encoding Tools. All rights reserved.</p>
  </footer>
</body>
</html>